<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fm13dt160calibration.MainActivity"
    tools:ignore="MergeRootFrame" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UID："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etUID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备温度(℃)："
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etDeviceTp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="-20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="u-Code(Hex):"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etUCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A(Hex):"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B(Hex):"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnReWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重做"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnReadLocalPara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="读参数"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnCalculation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计算"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ToggleButton
                    android:id="@+id/toggleBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否自动保存参数"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnReadTp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="保存Code" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A_Raw(Hex):"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etA_raw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B_Raw(Hex):"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/etB_raw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnReadChipPara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="读芯片参数"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnWritePara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="写芯片参数"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btnOneKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="一键校准" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="延时(分)：" />

                <EditText
                    android:id="@+id/etDelay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="2" >

                    <requestFocus />
                </EditText>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="间隔(秒)：" />

                <EditText
                    android:id="@+id/etInterval"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="60" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="次数：" />

                <EditText
                    android:id="@+id/etCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="10" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/btnRawMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置原始模式" />

                <Button
                    android:id="@+id/btnNormalMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="恢复正常模式" />

                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开启测温" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:enabled="true"
                android:text="温度校准方法：\n1、开始前，先点击【设置原始模式】，将温度标签设置成原始模式；\n2、设置采集参数， 激活温度标签，然后放置到校准设备中；\n3、测温结束后，点击【保存Code】,并检查输入的设备温度与实际的校准设备温度是否一致？\n4、保存Code成功之后，改变校准设备温度，然后再次激活温度标签，重复3步骤；\n5、两点测温结束后，点击【一键校准】完成温度标签参数设置；\n6、最后，点击【恢复正常模式】，将标签设置成正常模式；重复2步骤，进行温度验证（可以多点验证），若精度满足要求，则该标签已校准OK，否则重复以上操作。"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="11sp" />
        </LinearLayout>

    </ScrollView>

</FrameLayout>

